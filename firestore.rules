rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Pôvodné pravidlá pre 'characters'
    match /characters/{characterId} {
      allow read, create, update: if request.auth != null && request.auth.uid == resource.data.userId;
allow delete: if false;
    }
    
    // --- ZMENENÝ BLOK ---
    
    // Nové pravidlá pre 'trainedCharacters' (Fáza 1)
    match /trainedCharacters/{characterId} {
    	// Používateľ môže vytvoriť záznam, ak sa zhoduje jeho UID
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Používateľ môže čítať (get) svoj vlastný dokument
allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Používateľ môže prehľadávať (list) kolekciu, ak je prihlásený.
      // Firestore následne aplikuje vyššie uvedené 'read' pravidlo na výsledky.
      allow list: if request.auth != null;
      
      allow delete: if false;
    }
    // --- KONIEC ZMENENÉHO BLOKU ---
  }
}
