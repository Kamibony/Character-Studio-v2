rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Pôvodné pravidlá pre 'characters'
    match /characters/{characterId} {
      allow read, create, update: if request.auth != null && request.auth.uid == resource.data.userId;
allow delete: if false;
    }
    
    // --- ZMENENÝ BLOK ---

    // Pravidlo pre DOTAZY (list) na kolekciu.
    // Dovolí dotaz (napr. z knižnice), iba ak filtruje podľa prihláseného userId.
    match /trainedCharacters {
      allow list: if request.auth != null && request.auth.uid == request.query.where.userId;
    }
    
    // Nové pravidlá pre 'trainedCharacters' (Fáza 1)
    match /trainedCharacters/{characterId} {
    	// Používateľ môže vytvoriť záznam, ak sa zhoduje jeho UID
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
// Používateľ môže čítať (get) alebo aktualizovať (napr. pridať vizualizáciu)
      // iba svoje vlastné dokumenty.
allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      
      allow delete: if false;
    }
    // --- KONIEC ZMENENÉHO BLOKU ---
  }
}
