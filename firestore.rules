rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Pôvodné pravidlá pre 'characters'
    match /characters/{characterId} {
      allow read, create, update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if false;
    }
    
    // --- OPRAVENÝ BLOK ---
    
    // Nové pravidlá pre 'trainedCharacters' (Fáza 1)
    match /trainedCharacters/{characterId} {
    	// Používateľ môže vytvoriť záznam, ak sa zhoduje jeho UID
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Toto pravidlo 'read' pokrýva aj 'get' (načítanie detailu)
      // aj 'list' (dotazy, ako ten v knižnici), pokiaľ dotaz obsahuje
      // `where('userId', '==', request.auth.uid)`.
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // allow list: if request.auth != null;  <-- TENTO RIADOK SPÔSOBOVAL KONFLIKT A BOL ODSTRÁNENÝ
      
      allow delete: if false;
    }
    // --- KONIEC OPRAVENÉHO BLOKU ---
  }
}
